# Server Configuration
SERVER_ADDRESS="127.0.0.1:8000"

# Database URL for PostgreSQL
# Example: "postgres://user:password@host:port/database"
DATABASE_URL="postgres://postgres:password@localhost:5432/recruitment_db"

# Security
# A long, random string used for signing JWTs
JWT_SECRET="your-super-secret-jwt-key"
# Secret for securing incoming webhooks
WEBHOOK_SECRET="your-webhook-secret"

# External APIs
# Your API key for OpenAI or another AI provider
OPENAI_API_KEY="your-openai-api-key"

# Rate limiting configuration
PUBLIC_RPS=20
INTEGRATION_RPS=10

# AI limits
MAX_AI_QUESTIONS=12

# Logging
# Can be "trace", "debug", "info", "warn", "error"
RUST_LOG="info,recruitment_backend=debug"

# URL for the Telegram bot to send notifications to
TELEGRAM_BOT_WEBHOOK_URL="https://your-telegram-bot.com/webhook"

# WebApp public URL (required for generating CV download links)
WEBAPP_URL="https://your-webapp.com"

# 1F Integration Webhook
ONEF_WEBHOOK_URL="http://192.168.1.38/app/v1.2/api/publications/action/candidateResponse"